<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragments.ServerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/serverLayout"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/serverButton"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:text="@string/off_mini"
                app:cornerRadius="30dp"
                app:icon="@drawable/ic_power_off_24dp_foreground" />

            <TextView
                android:id="@+id/serverIPTextView"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:text="@string/serverIP" />

            <TextView
                android:id="@+id/clientIPTextView"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:text="@string/clientIP" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/DBLayout"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/createCampaignButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/create_campaign"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_add_24dp_foreground" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/white_list_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/whiteListButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:text="@string/white_list" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>